<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterScanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/prod_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:text="Product scanned successfully"
                android:textColor="#020000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/prod_details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prod_details"
                android:text="Quantity:"
                android:textColor="#020000"
                android:textSize="25dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/plus"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_below="@id/prod_details"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:background="@android:drawable/editbox_background"
                android:ems="10"
                android:inputType="number" />

            <ImageView
                android:id="@+id/delbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/prod_details2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_remove_circle_24"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/canbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/prod_details2"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_baseline_cancel_24" />



            <TextView
                android:id="@+id/textView9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/delbtn"
                android:layout_marginLeft="165dp"
                android:text="Delete"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/addbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/prod_details2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_baseline_add_circle_24" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="59dp"
                android:layout_height="18dp"
                android:layout_below="@id/addbtn"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="ADD"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/canbtn"
                android:text="Cancel"
                android:textColor="#000000"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>